@using PezeshkPlus.Models.Extension;

@{
    ViewBag.Title = "TopNews";
    Layout = "~/Views/Shared/_Main.cshtml";
}
@{
    List<PezeshkPlus.Models.USP_SEL_Articles_Result> topNews = ViewBag.TopNews;
    foreach (PezeshkPlus.Models.USP_SEL_Articles_Result item in topNews.Take(5))
    {
        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-3@s uk-margin uk-padding" uk-grid>
            <div class="uk-card-media-left uk-cover-container">
                <img src="@item.PicAddress" alt="" uk-cover>
                <canvas width="300" height="200"></canvas>
            </div>
            <div>
                <div class="uk-card-body">
                    <h3 class="uk-card-title">@item.Topic</h3>
                    <h5>@item.DateOfRecord.ToPersian()</h5>
                    <p>@item.Text...</p>
                </div>
                <div class="uk-card-footer">
                    <form action="~/تازه-های-سلامت/More" method="post">
                        <input type="hidden" value="@item.Topic" id="name" name="name" />
                        <input type="hidden" value="@item.ArticleID" id="id" name="id" />
                        <input class="uk-button uk-button-text" type="submit" value="بیشتر" id="submitform" />
                    </form>
                </div>
            </div>
        </div>
    }
}
